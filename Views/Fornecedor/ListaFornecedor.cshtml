
@model IEnumerable<fornecedor>

<link rel="stylesheet" href="~/css/sitepet.css" />

@{
    ViewData["Title"] = "Cadastro de Fornecedor - Grid";
}


@if( ViewBag.Mensagem != null ){
    <div class="alert alert-danger" role="alert">
        <p id="pMensagem">@ViewBag.Mensagem</p>
    </div>
}


@{
    await Html.RenderPartialAsync("_FerramentaFooter");
}



 <div class="container-fluid mx-0 px-0" >
    <div class="row ">
       <div class="col-md-12 mx-2 my-2 borda-principal Listagem-Titulo" >
            <br>        
            <h2  id="pad-listagem-1"> Cadastro de Fornecedor </h2>
            <br/>
       </div>    
    </div>
 </div>

  <div class="container-fluid mx-1 px-1" >
            <table class="table  table-striped table-hover table-responsive"  id="minhaTabela" >
                <thead>
                    <tr>
                        <th scope="col">
                           <a href="/Fornecedor/CadastroFornecedor" class="btn btn-success btnsm">Cadastrar</a>  
                        </th>
                        <th scope="col">Id</th>
                        <th scope="col">Nome Fornecedor</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Cidade</th>
                        <th scope="col">Celular</th>
                        <th scope="col">Tel Residencial</th>
                        <th scope="col">Tel Comercial</th>
                        <th scope="col">1-PF 2-PJ</th>

                    </tr>
                </thead>

                <tbody >
                    @foreach (fornecedor a in Model)
                    {
                        <tr >
 
                            <td id="a.idFornecedor"  class="actions">

                                  <a href="/Fornecedor/EditarFornecedor/@a.idFornecedor" >
                                      <img src="/icones/edit2.png"  width="25" height="25">
                                  </a>
                                  <a href="/Fornecedor/VerFornecedor/@a.idFornecedor" >
                                      <img src="/icones/ver.png"  width="25" height="25">
                                  </a>
                                  <a href="/Fornecedor/DeletarFornecedor/@a.idFornecedor" >
                                      <img src="/icones/delete.png"  width="25" height="25">
                                  </a>
                            </td> 
                            <td >@a.idFornecedor</td>
                            <td>@a.nomeFornecedor</td>
                            <td>@a.estadoFornecedor</td>
                            <td>@a.cidadeFornecedor</td>
                            <td>@a.tel1Fornecedor</td>
                            <td>@a.tel2Fornecedor</td>
                            <td>@a.tel3Fornecedor</td>

                            @if( a.pessoaFornecedor == "1"){
                                <td>"1-Fis√≠ca"</td>
                             }else{
                                <td>"2-Juridica"</td>
                             }
 
                        
                        </tr>
                    }
                </tbody>
            </table>
            </br>
  </div>

